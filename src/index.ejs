    //     $('.comment-textbox').hide();
    //   } else {
    //     $('.comment-textbox').show();
    //   }
    // })
    $('.ui-tab-nav > li').click(function() {
      $(this).addClass('current').siblings('li').removeClass('current');
      var index = $(this).index();
      $('.toggle-box li').eq(index).css({
        'display': 'block'
      }).siblings('li').css({
        'display': 'none'
      });
    });
  })
</script>

</html>
